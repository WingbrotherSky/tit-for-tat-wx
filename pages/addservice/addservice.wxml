<view class="header">
    <view class="h2-header"> Add your service here </view>
</view>
<view class="container">
    <view class="wrap">
        <form bindsubmit="bindSubmit">
            <view class="user-input">
                <view class="text-area-wrap">
                    <textarea value="{{service}}" style="input-size" placeholder="Insert Name of New Service" class="input-height" name="service" maxlength="-1" auto-height />
                </view>
            </view>
            <view class="user-input">
                <view class="text-area-wrap">
                    <textarea value="{{description}}" style="input-size" placeholder="Description of Service" class="input-height" name="description" maxlength="-1" auto-height />
                </view>
            </view>

            <button style="margin-bottom:50px" type="primary" form-type="submit">Submit</button>
        </form>
    </view>
</view>

